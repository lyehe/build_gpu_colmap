{
    "name":  "point-cloud-tools",
    "version":  "0.1.0",
    "description":  "Point cloud processing tools with COLMAP, GLOMAP, Ceres, and GPU support",
    "dependencies":  [
                         "eigen3",
                         "boost-program-options",
                         "boost-graph",
                         "boost-system",
                         "boost-filesystem",
                         "boost-serialization",
                         "freeimage",
                         "glog",
                         "gflags",
                         "sqlite3",
                         "glew",
                         "cgal",
                         "flann",
                         "metis",
                         "blas",
                         "lapack",
                         {
                             "name": "suitesparse",
                             "features": ["gpl", "cuda", "openmp"]
                         }
                     ],
    "features":  {
                     "cuda":  {
                                  "description":  "Enable CUDA GPU support",
                                  "dependencies":  [
                                                       {
                                                           "name":  "cuda",
                                                           "platform":  "windows | linux"
                                                       }
                                                   ]
                              },
                     "qt5":  {
                                 "description":  "Enable Qt5 GUI support for COLMAP",
                                 "dependencies":  [
                                                      "qt5-base",
                                                      "qt5-3d"
                                                  ]
                             },
                     "opencv":  {
                                    "description":  "Enable OpenCV support",
                                    "dependencies":  [
                                                         {
                                                             "name":  "opencv",
                                                             "features":  [
                                                                              "contrib",
                                                                              "nonfree"
                                                                          ]
                                                         }
                                                     ]
                                },
                     "python":  {
                                    "description":  "Enable Python bindings",
                                    "dependencies":  [
                                                         "pybind11",
                                                         "python3"
                                                     ]
                                }
                 },
    "builtin-baseline":  "c59b04f668d20c7dd83f478835e8266a3cc51270"
}
